{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngfizzy/entities": ["libs/entities/src/index.ts"],
      "@ngfizzy/entities/graphql-responses": ["libs/entities/src/lib/graphql-responses/index.ts"],
      "@ngfizzy/entities/constants": ["libs/entities/src/lib/constants/index.ts"]


    }
  },
  "exclude": ["node_modules", "tmp"]
}
